{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "jsx": "preserve",
        "lib": ["dom", "es2015", "es2017"],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false
    },
    "include": ["./src/**/*"],
    "plugins": [
        {
            "name": "ts-graphql-plugin",
            "schema": "src/__generated__/gatsby-schema.graphql",
            "tag": "graphql"
        }
    ]
}
